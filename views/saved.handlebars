<header class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav-fixed">
        <a class="navbar-brand" href="/">Hotrod Scraper</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/saved">Saved Articles</a>
                </li>
                <li>
                    <button class="btn btn-primary btn-sm" type="button" id="clear">Clear Articles</button>
                </li>
            </ul>
        </div>
    </nav>
</header>
<main class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <div class="container centered">
            <h1 class="display-4">Hotrodders</h1>
            <p class="lead">Saved articles</p>
        </div>
    </div>
    <div class="container" id="articles">
        {{#each Article}}
            {{#if saved}}
                <div class="article">
                    <div class="row">
                        <div class="col-md-8">
                            <h4>{{this.title}}</h4>
                            <h6>{{this.author}}</h6>
                            <p>{{this.excerpt}}</p>
                            <p><a href="{{this.link}}" target="_blank">{{this.link}}</a></p>
                            <button type="button" class="btn btn-primary btn-unsave" data-id="{{this._id}}">Remove from saved articles</button>
                            {{!-- <button type="button" class="btn btn-primary btn-note" data-id="{{this._id}}">Article notes</button> --}}
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <p>Notes:</p>
                                    {{#each note}}
                                        <p class="note-sm">{{ this }}
                                            <button type="button" class="btn btn-danger btn-sm delete-note" data-id="{{this._id}}">x</button>
                                        </p>
                                    {{/each}}
                                </div>
                            </div>
                            <form>
                                <div class="form-group">
                                    <label for="noteFormControlTextarea1">Enter a note</label>
                                    <textarea class="form-control noteBody" id="noteFormControlTextarea1" rows="3"></textarea>
                                </div>
                                <button type="button" class="btn btn-primary btn-sm save-note" data-id="{{this._id}}">Save changes</button>
                            </form>
                        </div>
                    </div> <!-- /row -->
                </div> <!-- /article -->
            {{/if}}
        {{/each}}
    </div> <!-- /articles -->
</main>